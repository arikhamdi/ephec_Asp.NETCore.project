        </td>
        <td>
            @Html.TextBoxFor(m => m.EmailPro)
            @Html.ValidationMessageFor(m => m.EmailPro, null, new { @class = "message" })
        </td>
    </tr>
    <tr>
        <td class="right">
            @Html.LabelFor(m => m.Description) :
        </td>
        <td>
            @Html.TextAreaFor(m => m.Description, 5, 40, null)
            @Html.ValidationMessageFor(m => m.Description, null, new { @class = "message" })
        </td>
    </tr>
    <tr>
        <td class="right">
            @Html.LabelFor(m => m.Logo) :
        </td>
        <td>
            @Html.TextBoxFor(m => m.Logo, new { type = "file" })
