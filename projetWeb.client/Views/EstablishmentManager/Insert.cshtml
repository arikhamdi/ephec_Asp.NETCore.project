@using Type = System.Type
@model Establishment

<h2>Insert New Establishment</h2>

<h3 class="message">@ViewBag.Message</h3>

@* The third parameter indicates the HTTP method of submitting the form  *@
@using (Html.BeginForm("Insert", "EstablishmentManager", FormMethod.Post))
{
<table border="0">
    <tr>
        <td class="right">
            @Html.LabelFor(m => m.Name) :
        </td>
        <td>
            @Html.TextBoxFor(m => m.Name)
            @Html.ValidationMessageFor(m => m.Name, null, new { @class = "message" })
        </td>
    </tr>
    <tr>
        <td class="right">
            @Html.LabelFor(m => m.EstablishmentType) :
        </td>
        <td>
            @Html.DropDownListFor(m => m.EstablishmentType,
                new SelectList(Enum.GetValues(typeof(EstablishmentType))),
                "Selectionnez")
        </td>
    </tr>
    <tr>
        <td class="right">
            @Html.LabelFor(m => m.Vat) :
        </td>
